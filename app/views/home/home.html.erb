<h2>Manage your Cryptocurrency</h2>
<br/>

<div class="container">
      <div class="btn-group mr-5 float-right">
            <%= link_to 'Calculate Profit/Loss', cryptotables_path, :class => "btn btn-primary" %>
      </div>
      <div class="btn-group mr-5 float-right">
            <%= link_to 'Lookup Cryptocurrency', home_lookupcrypto_path, :class => "btn btn-primary" %>
      </div>
      
      
</div>
  

 <br/>

<table class="table table-bordered modal-dialog modal-lg">
    <thead class="thead-dark">
        <th>Symbol Cryptocurrency</th>
        <th>Today Open</th>
        <th>Today High</th>
        <th>Today Low</th>
        <th>24h average</th>
        <th>Global vol</th>
    </thead>
    <tbody>
        <tr>
            <td>Bitcoin</td>
            <td><%= @bitcoin['open']['day'] %></td>
            <td><%= @bitcoin['high'] %></td>
            <td><%= @bitcoin['low'] %></td>
            <td><%= @bitcoin['averages']['day'] %></td>
            <td><%= @bitcoin['volume'] %></td>
        </tr>
        <tr>
            <td>Ethereum</td>
            <td><%= @ethereum['open']['day'] %></td>
            <td><%= @ethereum['high'] %></td>
            <td><%= @ethereum['low'] %></td>
            <td><%= @ethereum['averages']['day'] %></td>
            <td><%= @ethereum['volume'] %></td>
        </tr>
        <tr>
            <td>Litecoin</td>
            <td><%= @litecoin['open']['day'] %></td>
            <td><%= @litecoin['high'] %></td>
            <td><%= @litecoin['low'] %></td>
            <td><%= @litecoin['averages']['day'] %></td>
            <td><%= @litecoin['volume'] %></td>
        </tr>
        
        <tr>
            <td>ZCASH</td>
            <td><%= @ZCash['open']['day'] %></td>
            <td><%= @ZCash['high'] %></td>
            <td><%= @ZCash['low'] %></td>
            <td><%= @ZCash['averages']['day'] %></td>
            <td><%= @ZCash['volume'] %></td>
        </tr>
        
    </tbody>
</table>

