<p id="notice"><%= notice %></p>

<h1>Cryptotables</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Symbol</th>
      
      <th>Unit price</th>
      <th>Total amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptotables.each do |cryptotable| %>
      <%if cryptotable.user_id == current_user.id %>
        <tr>
        <td><%= cryptotable.symbol %></td>
        
        <td><%= cryptotable.unit_price %></td>
        <td><%= cryptotable.total_amount %></td>
        <td><%= link_to 'Show', cryptotable, class: 'mr-5' %></td>
        <td><%= link_to 'Edit', edit_cryptotable_path(cryptotable), class: 'mr-5' %></td>
        <td><%= link_to 'Destroy', cryptotable, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mr-5' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Look for New Cryptocurrency', new_cryptotable_path, class: 'btn btn-dark mr-5'%>

<%= link_to 'Back to Home Page', home_home_path, class: 'btn btn-dark' %>
